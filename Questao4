function tribonacciRecursivo(n) {
  if (n === 0) {
    return 0;
  } else if (n === 1) {
    return 0;
  } else if (n === 2) {
    return 1;
  } else {
    return tribonacciRecursivo(n - 1) + tribonacciRecursivo(n - 2) + tribonacciRecursivo(n - 3);
  }
}

const n = 10;
const termoTribonacci = tribonacciRecursivo(n);
console.log(`O ${n}º termo da sequência de Tribonacci é:`, termoTribonacci);
