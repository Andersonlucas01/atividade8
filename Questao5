function numero PellRecursivo(n) {
  if (n === 0) {
    return 0;
  } else if (n === 1) {
    return 1;
  } else {
    return 2 * numeroPellRecursivo(n - 1) + numeroPellRecursivo(n - 2);
  }
}

const n = 10;
const numeroPell = numeroPellRecursivo(n);
console.log(`O ${n}º número de Pell é:`, numeroPell);
